{
  "name": "mahjong-calc",
  "version": "2.0.0",
  "description": "Mahjong score calculator",
  "scripts": {
    "build": "cross-env NODE_ENV='production' TS_NODE_PROJECT='tsconfig.commonjs.json' webpack",
    "build:wasm": "cd wasm/decomposer && wasm-pack build",
    "dev": "cross-env TS_NODE_PROJECT='tsconfig.commonjs.json' webpack serve",
    "lint": "eslint 'src/**/*.{ts,tsx}' webpack.config.ts tailwind.config.ts && tsc --noEmit --project tsconfig.commonjs.json && tsc --noEmit",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}' webpack.config.ts tailwind.config.ts && tsc --noEmit --project tsconfig.commonjs.json && tsc --noEmit",
    "prepare": "husky install",
    "test": "jest"
  },
  "keywords": [],
  "author": "livewing.net <dev@livewing.net> (https://livewing.net/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/livewing/mahjong-calc.git"
  },
  "bugs": {
    "url": "https://github.com/livewing/mahjong-calc/issues"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "resetMocks": false,
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "dependencies": {
    "copy-to-clipboard": "^3.3.1",
    "decomposer": "file:./wasm/decomposer/pkg",
    "i18next": "^21.8.0",
    "i18next-browser-languagedetector": "^6.1.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-i18next": "^11.16.9",
    "react-icons": "^4.3.1"
  },
  "devDependencies": {
    "@svgr/webpack": "^6.2.1",
    "@tailwindcss/forms": "^0.5.1",
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/jest": "^27.5.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/tailwindcss": "^3.0.10",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.4",
    "@types/workbox-webpack-plugin": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "autoprefixer": "^10.4.7",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.7",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-localstorage-mock": "^2.4.21",
    "lint-staged": "^12.4.1",
    "mini-css-extract-plugin": "^2.6.0",
    "postcss": "^8.4.13",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^28.0.2",
    "ts-loader": "^9.3.0",
