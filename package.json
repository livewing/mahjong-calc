{
  "name": "mahjong-calc",
  "version": "2.0.1",
  "description": "Mahjong score calculator",
  "scripts": {
    "build": "cross-env NODE_ENV='production' TS_NODE_PROJECT='tsconfig.commonjs.json' webpack",
    "build:wasm": "cd wasm/decomposer && wasm-pack build",
    "dev": "cross-env TS_NODE_PROJECT='tsconfig.commonjs.json' webpack serve",
    "lint": "eslint 'src/**/*.{ts,tsx}' webpack.config.ts && tsc --noEmit --project tsconfig.commonjs.json && tsc --noEmit",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}' webpack.config.ts && tsc --noEmit --project tsconfig.commonjs.json && tsc --noEmit",
    "prepare": "husky install",
    "test": "jest"
  },
  "keywords": [],
  "author": "livewing.net <dev@livewing.net> (https://livewing.net/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/livewing/mahjong-calc.git"
  },
  "bugs": {
    "url": "https://github.com/livewing/mahjong-calc/issues"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "resetMocks": false,
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "dependencies": {
    "copy-to-clipboard": "^3.3.1",
    "decomposer": "file:./wasm/decomposer/pkg",
    "i18next": "^21.8.11",
    "i18next-browser-languagedetector": "^6.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.17.4",
    "react-icons": "^4.4.0"
  },
  "devDependencies": {
    "@livewing/eslint-config": "^1.0.1",
    "@svgr/webpack": "^6.2.1",
    "@tailwindcss/forms": "^0.5.2",
    "@tsconfig/strictest": "^1.0.1",
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/jest": "^28.1.6",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.17.0",
    "@types/workbox-webpack-plugin": "^5.1.8",
    "autoprefixer": "^10.4.7",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.12",
    "eslint": "^8.18.0",
    "eslint-plugin-tailwindcss": "^3.6.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-localstorage-mock": "^2.4.21",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3",
    "workbox-sw": "^6.5.3",
    "workbox-webpack-plugin": "^6.5.3",
    "yaml-loader": "^0.8.0"
  }
